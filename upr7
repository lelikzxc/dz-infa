import re
from collections import Counter

#путь к файлу зависит от компьютера
with open("C:\Program Files\Python38\LICENSE.txt", "r") as f:
    text = f.read()
    text = text.lower()
    text = re.sub("[^a-z0-9]+", " ", text)
    words = text.split()
    word_counts = Counter(words)
    print("Десять самых часто встречающихся слов и количество их употреблений:")
    for word, count in word_counts.most_common(10):
        print(f"{word}: {count}")

